{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true,
    "declaration": false,
    "module": "commonjs", 
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "target": "ES5",
    "lib": ["ES6"],
    "typeRoots": [
        "./node_modules/@types"
    ]
},
    "include": [
	    "index.ts",
	    "lib/*" 
    ]
}
